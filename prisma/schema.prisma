// Prisma schema for Kesennuma Digital Experiences
// Using SQLite (Local development)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Story {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  latitude    Float
  longitude   Float
  mediaUrl    String?
  submitter   String?
  tags        String?  // JSON stringified array for SQLite
  approved    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
